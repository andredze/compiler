CXX := g++

CXXFLAGS = -D _DEBUG -ggdb3 -std=c++17 -O0 -Wall -Wextra -Weffc++ -Wsign-conversion 			 \
		   -Waggressive-loop-optimizations -Wc++14-compat -Wmissing-declarations 		   		 \
		   -Wcast-align -Wcast-qual -Wchar-subscripts -Wconditionally-supported  		   		 \
		    -Wctor-dtor-privacy -Wempty-body -Wfloat-equal -Wformat-nonliteral 		 			 \
		   -Wformat-security -Wformat-signedness -Wformat=2 -Winline -Wlogical-op 		   		 \
		   -Wnon-virtual-dtor -Wopenmp-simd -Woverloaded-virtual -Wpacked -Wpointer-arith  		 \
		   -Winit-self -Wredundant-decls -Wshadow -Wsign-promo		   		 					 \
		   -Wstrict-null-sentinel -Wstrict-overflow=2 -Wsuggest-attribute=noreturn		   		 \
		   -Wsuggest-final-methods -Wsuggest-final-types -Wsuggest-override -Wswitch-default 	 \
		   -Wswitch-enum -Wsync-nand -Wundef -Wunreachable-code -Wunused -Wuseless-cast 		 \
		   -Wvariadic-macros -Wno-literal-suffix -Wno-missing-field-initializers -Wno-narrowing  \
		   -Wno-old-style-cast -Wno-varargs -Wstack-protector -fcheck-new -fsized-deallocation 	 \
		   -fstack-protector -fstrict-overflow -flto-odr-type-merging -fno-omit-frame-pointer 	 \
		   -Wlarger-than=8192 -Wstack-usage=8192 -pie -fPIE -Werror=vla -Wconversion

SANITIZER += -fsanitize=address,alignment,bool,bounds,enum,float-cast-overflow,float-divide-by-zero,$\
             integer-divide-by-zero,leak,nonnull-attribute,null,object-size,return,returns-nonnull-attribute,$\
			 shift,signed-integer-overflow,undefined,unreachable,vla-bound,vptr

CXXFLAGS += $(SANITIZER)

BACKEND_INCLUDES  := -D BACKEND \
					 -I backend/include \
                     -I common/lang_ctx \
                     -I common/stack \
                     -I common/colors \
                     -I common/tree \
                     -I common/io_file \
                     -I common/AST_io \
                     -I common

BACKEND_SOURCES := backend/src/main.cpp \
                   backend/src/asm_functions.cpp \
                   backend/src/backend.cpp \
                   common/lang_ctx/lang_funcs.cpp \
                   common/stack/stack.cpp \
                   common/AST_io/AST_read.cpp \
                   common/tree/tree_commands.cpp \
                   common/tree/tree_dump.cpp \
                   common/colors/colors.cpp \
                   common/io_file/io_file.cpp

LOGS := log/*

BACKEND_OBJECTS  := $(BACKEND_SOURCES:.cpp=.o)

BACKEND_TARGET  := back

ifdef DEBUG
CXXFLAGS += -D TREE_DEBUG -D STACK_DEBUG -D DEBUG
endif

all: back

back: $(BACKEND_TARGET)

$(BACKEND_TARGET): $(BACKEND_OBJECTS)
	$(CXX) $(CXXFLAGS) $(BACKEND_OBJECTS) -o $(BACKEND_TARGET)

backend/%.o: backend/%.cpp
	$(CXX) $(CXXFLAGS) $(BACKEND_INCLUDES) -c $< -o $@

common/%.o: common/%.cpp
	$(CXX) $(CXXFLAGS) $(BACKEND_INCLUDES) -c $< -o $@

%.o: %.cpp
	@case $< in \
		backend/src/*) \
			$(CXX) $(CXXFLAGS) $(BACKEND_INCLUDES) -c $< -o $@ ;; \
		common/*) \
			$(CXX) $(CXXFLAGS) -I common -c $< -o $@ ;; \
	esac

back_clean:
	rm -f $(BACKEND_OBJECTS) $(BACKEND_TARGET)

clean: back_clean

dlogs:
	rm -rf $(LOGS)

back_rebuild: back_clean back

rebuild: clean all

.PHONY: all clean rebuild back back_clean dlogs back_rebuild
